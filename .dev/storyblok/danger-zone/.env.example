#Add these to your version of .env file for Storyblok migration scripts...

# Source (copy from)
SOURCE_SPACE_ID=
SOURCE_REGION=              # one of: us | eu | ca | ap | cn
SOURCE_TOKEN=

# Target (copy to)
TARGET_SPACE_ID=
TARGET_REGION=              # one of: us | eu | ca | ap | cn
TARGET_TOKEN=

# Behavior
PUBLISH_MODE=all  # "none" | "published-with-changes" | "all"
DRY_RUN=false                        # true to preview without writing

# Asset migration behavior
ASSET_PER_PAGE=100           # pagination for assets
ASSET_DOWNLOAD_DIR=./.tmp/assets  # local temp dir for downloaded files
ASSET_CONCURRENCY=4          # how many uploads to run in parallel (tune per rate limits)
ASSET_VALIDATE_UPLOAD=true   # request validate_upload so we call finish_upload


# NEW: Asset origin (the original demo space you want to pull assets from)
ASSET_ORIGIN_SPACE_ID=
ASSET_ORIGIN_REGION=        # use the demoâ€™s actual region (eu|us|ca|ap|cn)
ASSET_ORIGIN_TOKEN=
